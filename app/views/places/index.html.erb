<div class="container">
<h1>Mis Locales</h1>
<%= link_to "Agregar", new_place_path, class:"btn btn-primary" %>
    <table class="table">
    <thead class="thead-dark">
        <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Dirección</th>
        <th scope="col">Precio</th>
        <th scope="col">Acciones</th>
        </tr>
  </thead>
    <% @places.each do |place| %>
  <tbody>
    <tr>
      <th scope="row"><%= place.id %></th>
      <td><%= place.name %></td>
      <td><%= place.address %></td>
      <td><%= place.price_per_day %></td>
      <td><%= link_to "Editar", edit_place_path(place), class:"btn btn-warning" %></td>
      <td><%= link_to "Eliminar", "#", method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
   </tbody> 
</table>

<%= link_to "Volver al menú principal", root_path, class:"btn btn-success" %>
</div>