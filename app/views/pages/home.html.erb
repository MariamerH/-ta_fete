<!-- aqui inician las cards-->
<div class='container my-5'>
  <h1 class='text-center'>Encuentra tu lugar ideal</h1>

  <div class='cards mt-5'>
    <% @places.each do |place| %>
      <div class="card-product">
        <% if place.photo.key %>
          <%= cl_image_tag place.photo.key, width: 300, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1523301343968-6a6ebf63c672?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=869&q=80
" alt="">
        <% end %>
        <div class="card-product-infos">
          <h2><%= place.name %></h2>
          <p><%= place.description %></p>
          <p><%= place.address %></p>
          <div class="d-flex justify-content-end">
          <% if user_signed_in? %>
            <%= link_to 'Ver detalles', place_path(place), class: "btn btn-info" %>
          <% else %>
            <%= link_to 'Ver detalles', new_user_session_path, class: "btn btn-info" %>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


