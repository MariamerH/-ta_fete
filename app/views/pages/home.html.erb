  <div class="carousel-inner">
    <div class="carousel-item active home-carousel">
      <%= image_tag "fiesta_piscina.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Tu fiesta en el lugar ideal</h5>
        <p>Haz realidad la fiesta tan soñada</p>
      </div>
    </div>
    <div class="carousel-item home-carousel">
      <%= image_tag "carrusel_1.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Los mejores lugares para tu fiesta</h5>
        <p>Todos a tu alcance</p>
      </div>
    </div>
    <div class="carousel-item home-carousel">
      <%= image_tag "card_place_3.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Sólo ubica tu lugar preferido</h5>
        <p>Nosotros nos encargamos del resto!</p>
      </div>
    </div>
  </div>
 <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

<!-- aqui inician las cards-->
<div class='container mt-5'>
  <h1 class='text-center'>Encuentra tu lugar ideal</h1>

  <div class='cards mt-5'>
    <% @places.each do |place| %>
      <div class="card-product">
        <%= cl_image_tag place.photos.first.key, width: 300, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= place.name %></h2>
          <p><%= place.description %></p>
          <p><%= place.address %></p>
          <div class="d-flex justify-content-end">
          <%= link_to 'Ver detalles', place_path(place), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

