
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active home-carousel">
      <%= image_tag "fiesta_carrousel_1.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Tu fiesta en el lugar ideal</h5>
        <p>haz realidad la fiesta tan soñada</p>
      </div>
    </div>
    <div class="carousel-item home-carousel">
      <%= image_tag "fiesta_carrousel_2.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Los mejores lugares para tu fiesta</h5>
        <p>Todos a tu alcance</p>
      </div>
    </div>
    <div class="carousel-item home-carousel">
      <%= image_tag "fiesta_carrousel_3.jpg", class:"d-block w-100 home-img" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Sólo ubica tu lugar preferido</h5>
        <p>Nosotros nos encargamos del resto!</p>
      </div>
    </div>
  </div>
 <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

<div class="container mt-5 d-flex justify-content-around">
  <% @places.take(3).each do |place| %>
    <div class="card-trip" style="width: 18rem;">
      <%= cl_image_tag place.photos.first.key, width: 120, crop: :fit, class:"card-img-top" %>
        <div class="card-body">
          <div>
            <h2 class="card-title"><%= place.name %></h2>
            <p class="card-text"><%= place.address %></p>
          </div>
            <h2 class="card-trip-pricing"><%= place.price_per_day %></h2>
        </div>
    </div>
  <% end %>
</div>



