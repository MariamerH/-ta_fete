<div class="container">
  <div class="abs-center">
      <div class="form" ;>
        <h2>Registro</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first-name" }, label: false, placeholder: 'Nombre' %>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last-name" }, label: false, placeholder: 'Apellido' %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false, placeholder: 'Email' %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Contraseña' %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Confirmar contraseña' %>
          </div>

          <div class="form-actions">
             <%= f.button :submit, "Registrarse", class: "btn btn-primary btn-block btn-lg" %>
          </div>
          <br>
        <% end %>
<%= render "devise/shared/links" %>
      </div>
  </div>
</div>
