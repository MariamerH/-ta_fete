<div class='form mt-5'>
  <h2>Editar perfil</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'Nombre' %>
      <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: 'Apellido' %>
      <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Déjalo en blanco si no quieres cambiarlo",
                  required: false,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Nueva contraseña' %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Confirmar nueva contraseña' %>
      <%= f.input :current_password,
                  hint: "Necesitamos su contraseña actual para confirmar sus cambios",
                  required: true,
                  input_html: { autocomplete: "current-password" }, label: false, placeholder: 'Contraseña actual' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn btn-success' %>
    </div>
  <% end %>

  <h3 class='mt-3'>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back, class: 'btn btn-info' %>
</div>
